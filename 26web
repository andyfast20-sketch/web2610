    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const nav = document.getElementById('nav');
        
        mobileMenuBtn.addEventListener('click', () => {
            nav.classList.toggle('active');
            mobileMenuBtn.innerHTML = nav.classList.contains('active') ? 
                '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
        });

        // Header Scroll Effect
        const header = document.getElementById('header');
        
        window.addEventListener('scroll', () => {
            if (window.scrollY > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Hero Slider
        const heroSlides = document.querySelectorAll('.hero-slide');
        let currentHeroSlide = 0;
        const heroInterval = 4000;

        function showHeroSlide(index) {
            if (index === currentHeroSlide || !heroSlides[index]) {
                return;
            }

            const currentSlide = heroSlides[currentHeroSlide];
            const nextSlide = heroSlides[index];

            nextSlide.classList.add('active');
            currentSlide.classList.remove('active');

            currentHeroSlide = index;
        }

        if (heroSlides.length > 0) {
            heroSlides[0].classList.add('active');

            if (heroSlides.length > 1) {
                setInterval(() => {
                    const nextIndex = (currentHeroSlide + 1) % heroSlides.length;
                    showHeroSlide(nextIndex);
                }, heroInterval);
            }
        }

        // Testimonial Slider
        const testimonialDots = document.querySelectorAll('.testimonial-dot');
        const testimonials = document.querySelectorAll('.testimonial');
        
        testimonialDots.forEach(dot => {
            dot.addEventListener('click', () => {
                const index = dot.getAttribute('data-index');
                
                // Update active testimonial
                testimonials.forEach(testimonial => {
                    testimonial.classList.remove('active');
                });
                testimonials[index].classList.add('active');
                
                // Update active dot
                testimonialDots.forEach(d => {
                    d.classList.remove('active');
                });
                dot.classList.add('active');
            });
        });

        // Auto-rotate testimonials
        let currentTestimonial = 0;
        
        function rotateTestimonials() {
            testimonialDots.forEach(d => d.classList.remove('active'));
            testimonials.forEach(t => t.classList.remove('active'));
            
            currentTestimonial = (currentTestimonial + 1) % testimonials.length;
            
            testimonialDots[currentTestimonial].classList.add('active');
            testimonials[currentTestimonial].classList.add('active');
        }
        
        if (testimonialDots.length > 0 && testimonials.length > 0) {
            setInterval(rotateTestimonials, 5000);
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();

                const targetId = this.getAttribute('href');
                if (targetId === '#') return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    // Close mobile menu if open
                    nav.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';

                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // YouTube community video thumbnails
        const communityVideoFrames = Array.from(document.querySelectorAll('.video-showcase .video-frame'));
        const youtubePlayers = [];
        const youtubeOverlays = [];

        function addThumbnailOverlay(frame, index) {
            const iframe = frame.querySelector('iframe');
            if (!iframe) {
                return;
            }

            const videoId = frame.dataset.videoId;
            if (!videoId) {
                return;
            }

            if (!iframe.src.includes('enablejsapi=1')) {
                const separator = iframe.src.includes('?') ? '&' : '?';
                iframe.src = `${iframe.src}${separator}enablejsapi=1`;
            }

            if (!iframe.id) {
                iframe.id = `video-player-${index}`;
            }

            const overlay = document.createElement('div');
            overlay.className = 'video-thumbnail';
            overlay.style.backgroundImage = `url(https://img.youtube.com/vi/${videoId}/hqdefault.jpg)`;
            overlay.setAttribute('role', 'button');
            overlay.setAttribute('tabindex', '0');
            overlay.setAttribute('aria-label', 'Replay video');

            const replayVideo = () => {
                overlay.classList.remove('visible');
                const player = youtubePlayers[index];
                if (player && typeof player.seekTo === 'function') {
                    player.seekTo(0);
                    player.playVideo();
                }
            };

            overlay.addEventListener('click', replayVideo);
            overlay.addEventListener('keydown', event => {
                if (event.key === 'Enter' || event.key === ' ') {
                    event.preventDefault();
                    replayVideo();
                }
            });

            frame.appendChild(overlay);
            youtubeOverlays[index] = overlay;
        }

        function handleCommunityVideoState(event, overlay) {
            if (!overlay || typeof YT === 'undefined' || !YT.PlayerState) {
                return;
            }

            if (event.data === YT.PlayerState.ENDED) {
                overlay.classList.add('visible');
            } else if (event.data === YT.PlayerState.PLAYING) {
                overlay.classList.remove('visible');
            }
        }

        if (communityVideoFrames.length > 0) {
            communityVideoFrames.forEach((frame, index) => {
                addThumbnailOverlay(frame, index);
            });

            window.onYouTubeIframeAPIReady = function() {
                communityVideoFrames.forEach((frame, index) => {
                    const iframe = frame.querySelector('iframe');
                    if (!iframe) {
                        return;
                    }

                    const overlay = youtubeOverlays[index];

                    youtubePlayers[index] = new YT.Player(iframe.id, {
                        events: {
                            onStateChange: event => handleCommunityVideoState(event, overlay)
                        }
                    });
                });
            };

            const ytScript = document.createElement('script');
            ytScript.src = 'https://www.youtube.com/iframe_api';
            document.body.appendChild(ytScript);
        }

        // Booking availability powered by Google Calendar
        const bookingGrid = document.getElementById('bookingGrid');
        const bookingStatus = document.getElementById('bookingStatus');
        const bookingModal = document.getElementById('bookingModal');
        const bookingModalClose = document.getElementById('bookingModalClose');
        const bookingSummary = document.getElementById('bookingSummary');
        const bookingForm = document.getElementById('bookingForm');
        const bookingConfirmation = document.getElementById('bookingConfirmation');
        const selectedSlotInput = document.getElementById('selectedSlot');

        if (bookingGrid && bookingStatus && bookingModal && bookingForm && bookingSummary && bookingConfirmation && selectedSlotInput) {
            const API_KEY = bookingGrid.dataset.apiKey || 'AIzaSyBNq41YmSJrEES1bRT3FYh8hbQ5ZhgvzCM';
            const CALENDAR_ID = bookingGrid.dataset.calendarId || 'primary';
            const CALENDAR_TOKEN = bookingGrid.dataset.calendarToken || (typeof window !== 'undefined' ? window.GOOGLE_CALENDAR_TOKEN : '') || '';
            const BOOKING_ENDPOINT = bookingGrid.dataset.bookingEndpoint || '';
            const MAX_AVAILABLE_DAYS = 5;
            const SLOT_DURATION_MINUTES = 30;
            const START_HOUR = 18;
            const END_HOUR = 20;
            const LOOKAHEAD_DAYS = 45;
            let lastFocusedElement = null;
            const bookingSubmitButton = bookingForm.querySelector('button[type="submit"]');
            let bookingSubmissionInFlight = false;

            const weekdayFormatter = new Intl.DateTimeFormat(undefined, { weekday: 'long' });
            const dateFormatter = new Intl.DateTimeFormat(undefined, { month: 'long', day: 'numeric' });
            const timeFormatter = new Intl.DateTimeFormat(undefined, { hour: 'numeric', minute: '2-digit' });

            function parseEventDate(eventDate) {
                if (!eventDate) {
                    return null;
                }

                if (eventDate.dateTime) {
                    return new Date(eventDate.dateTime);
                }

                if (eventDate.date) {
                    return new Date(`${eventDate.date}T00:00:00`);
                }

                return null;
            }

            async function fetchCalendarEvents(timeMin, timeMax) {
                const endpoint = new URL(`https://www.googleapis.com/calendar/v3/calendars/${encodeURIComponent(CALENDAR_ID)}/events`);
                if (API_KEY) {
                    endpoint.searchParams.set('AIzaSyBNq41YmSJrEES1bRT3FYh8hbQ5ZhgvzCM', API_KEY);
                }
                endpoint.searchParams.set('singleEvents', 'true');
                endpoint.searchParams.set('orderBy', 'startTime');
                endpoint.searchParams.set('timeMin', timeMin);
                endpoint.searchParams.set('timeMax', timeMax);

                const response = await fetch(endpoint.toString());
                if (!response.ok) {
                    throw new Error(`Calendar request failed with status ${response.status}`);
                }

                const data = await response.json();
                if (data.error) {
                    throw new Error(data.error.message || 'Calendar API returned an error');
                }

                return Array.isArray(data.items) ? data.items : [];
            }

            function isWeekday(date) {
                const day = date.getDay();
                return day >= 1 && day <= 5;
            }

            function generateSlotsForDay(dayDate) {
                const slots = [];
                const slotStart = new Date(dayDate);
                slotStart.setHours(START_HOUR, 0, 0, 0);

                const closingTime = new Date(dayDate);
                closingTime.setHours(END_HOUR, 0, 0, 0);

                while (slotStart < closingTime) {
                    const slotEnd = new Date(slotStart.getTime() + SLOT_DURATION_MINUTES * 60000);
                    slots.push({
                        start: new Date(slotStart),
                        end: new Date(slotEnd)
                    });
                    slotStart.setMinutes(slotStart.getMinutes() + SLOT_DURATION_MINUTES);
                }

                return slots;
            }

            function isSlotBooked(slotStart, slotEnd, events) {
                return events.some(event => event.end > slotStart && event.start < slotEnd);
            }

            function buildDayAvailability(events) {
                const availableDays = [];
                const backupDays = [];
                const cursor = new Date();
                cursor.setHours(0, 0, 0, 0);

                let inspectedDays = 0;
                while ((availableDays.length < MAX_AVAILABLE_DAYS || backupDays.length < MAX_AVAILABLE_DAYS) && inspectedDays < LOOKAHEAD_DAYS) {
                    if (isWeekday(cursor)) {
                        const dayDate = new Date(cursor);
                        const slots = generateSlotsForDay(dayDate).map(slot => {
                            const booked = isSlotBooked(slot.start, slot.end, events);
                            return { ...slot, booked };
                        });
                        const openSlots = slots.filter(slot => !slot.booked);
                        const dayRecord = {
                            date: new Date(dayDate),
                            slots,
                            availableSlots: openSlots
                        };

                        if (openSlots.length > 0 && availableDays.length < MAX_AVAILABLE_DAYS) {
                            availableDays.push(dayRecord);
                        } else if (backupDays.length < MAX_AVAILABLE_DAYS) {
                            backupDays.push(dayRecord);
                        }
                    }

                    cursor.setDate(cursor.getDate() + 1);
                    inspectedDays += 1;
                }

                const combined = availableDays.concat(backupDays);
                return combined.slice(0, MAX_AVAILABLE_DAYS);
            }

            function renderBookingDays(days, { fallback = false } = {}) {
                bookingGrid.innerHTML = '';

                if (!Array.isArray(days) || days.length === 0) {
                    const emptyState = document.createElement('div');
                    emptyState.className = 'booking-empty';
                    emptyState.innerHTML = fallback
                        ? '<strong>Calendar temporarily unavailable.</strong><br>Pick a slot below or call us while we reconnect your Google Calendar.'
                        : '<strong>Evening slots are fully booked.</strong><br>Join the waitlist by calling or emailing our team.';
                    bookingGrid.appendChild(emptyState);
                    return;
                }

                days.forEach(day => {
                    const card = document.createElement('article');
                    card.className = 'booking-card';

                    if (day.availableSlots.length === 0) {
                        card.classList.add('is-full');
                    } else if (day.availableSlots.length <= 2) {
                        card.classList.add('is-limited');
                    }

                    const header = document.createElement('div');
                    header.className = 'booking-card-header';

                    const headingWrapper = document.createElement('div');
                    const dayName = document.createElement('div');
                    dayName.className = 'booking-day';
                    dayName.textContent = weekdayFormatter.format(day.date);

                    const dateLabel = document.createElement('div');
                    dateLabel.className = 'booking-date';
                    dateLabel.textContent = dateFormatter.format(day.date);

                    headingWrapper.append(dayName, dateLabel);

                    const pill = document.createElement('span');
                    pill.className = 'availability-pill';
                    const pillIcon = document.createElement('i');
                    const openCount = day.availableSlots.length;
                    let pillText = '';

                    if (openCount === 0) {
                        pillIcon.className = 'fas fa-circle-xmark';
                        pillText = 'Fully booked';
                    } else if (openCount === 1) {
                        pillIcon.className = 'fas fa-hourglass-half';
                        pillText = 'Last slot';
                    } else {
                        pillIcon.className = 'fas fa-circle-check';
                        pillText = `${openCount} slots open`;
                    }

                    pill.append(pillIcon, document.createTextNode(` ${pillText}`));

                    header.append(headingWrapper, pill);

                    const slotWrapper = document.createElement('div');
                    slotWrapper.className = 'booking-slots';

                    day.slots.forEach(slot => {
                        const button = document.createElement('button');
                        button.type = 'button';
                        button.className = 'slot-button';

                        const startLabel = timeFormatter.format(slot.start);
                        const endLabel = timeFormatter.format(slot.end);

                        button.textContent = `${startLabel}`;
                        button.title = `${weekdayFormatter.format(day.date)} ${dateFormatter.format(day.date)}  ${startLabel} - ${endLabel}`;

                        if (slot.booked) {
                            button.disabled = true;
                            button.setAttribute('aria-label', `${startLabel} to ${endLabel} booked`);
                        } else {
                            button.dataset.start = slot.start.toISOString();
                            button.dataset.end = slot.end.toISOString();
                            button.dataset.day = day.date.toISOString();
                            button.setAttribute('aria-label', `${startLabel} to ${endLabel} available`);
                            button.addEventListener('click', () => {
                                openBookingModal({
                                    start: slot.start,
                                    end: slot.end,
                                    day: day.date
                                });
                            });
                        }

                        slotWrapper.appendChild(button);
                    });

                    card.append(header, slotWrapper);
                    bookingGrid.appendChild(card);
                });
            }

            function openBookingModal(slot) {
                lastFocusedElement = document.activeElement;

                bookingModal.classList.add('open');
                bookingModal.setAttribute('aria-hidden', 'false');

                const startLabel = timeFormatter.format(slot.start);
                const endLabel = timeFormatter.format(slot.end);
                bookingSummary.textContent = `${weekdayFormatter.format(slot.day)}, ${dateFormatter.format(slot.day)}  ${startLabel}  ${endLabel}`;
                selectedSlotInput.value = `${slot.start.toISOString()}|${slot.end.toISOString()}`;
                bookingConfirmation.classList.remove('visible');

                requestAnimationFrame(() => {
                    const firstField = bookingForm.querySelector('input, textarea, button');
                    if (firstField) {
                        firstField.focus();
                    }
                });
            }

            function closeBookingModal() {
                bookingModal.classList.remove('open');
                bookingModal.setAttribute('aria-hidden', 'true');
                bookingSummary.textContent = '';
                bookingConfirmation.classList.remove('visible');
                bookingForm.reset();
                selectedSlotInput.value = '';
                setBookingSubmitting(false);
                bookingSubmissionInFlight = false;

                if (lastFocusedElement && typeof lastFocusedElement.focus === 'function') {
                    lastFocusedElement.focus();
                }
            }

            function setBookingSubmitting(isSubmitting) {
                if (!bookingForm) {
                    return;
                }

                bookingForm.classList.toggle('is-submitting', Boolean(isSubmitting));

                if (bookingSubmitButton) {
                    bookingSubmitButton.disabled = Boolean(isSubmitting);
                    if (isSubmitting) {
                        bookingSubmitButton.setAttribute('aria-busy', 'true');
                    } else {
                        bookingSubmitButton.removeAttribute('aria-busy');
                    }
                }
            }

            function buildEventDescription({ customerName, customerEmail, customerPhone, customerNotes, slotStart, slotEnd }) {
                const startDate = new Date(slotStart);
                const endDate = new Date(slotEnd);
                const dateLabel = `${weekdayFormatter.format(startDate)}, ${dateFormatter.format(startDate)}`;
                const timeLabel = `${timeFormatter.format(startDate)}  ${timeFormatter.format(endDate)}`;

                const lines = [
                    `Customer: ${customerName || 'Not provided'}`,
                    `Email: ${customerEmail || 'Not provided'}`,
                    `Phone: ${customerPhone || 'Not provided'}`,
                    '',
                    `Slot: ${dateLabel}  ${timeLabel}`
                ];

                if (customerNotes) {
                    lines.push('', 'Garden Notes:', customerNotes);
                }

                if (typeof window !== 'undefined' && window.location) {
                    lines.push('', `Submitted via ${window.location.href}`);
                }

                return lines.join('\n');
            }

            async function createCalendarEvent(eventDetails) {
                const timeZone = Intl.DateTimeFormat().resolvedOptions().timeZone || 'UTC';
                const payload = {
                    summary: eventDetails.summary,
                    description: eventDetails.description,
                    start: {
                        dateTime: eventDetails.start,
                        timeZone
                    },
                    end: {
                        dateTime: eventDetails.end,
                        timeZone
                    },
                    attendees: eventDetails.attendees,
                    reminders: {
                        useDefault: true
                    },
                    source: typeof window !== 'undefined' && window.location ? {
                        title: typeof document !== 'undefined' && document.title ? document.title : 'Pay As You Mow',
                        url: window.location.href
                    } : undefined
                };

                if (eventDetails.location) {
                    payload.location = eventDetails.location;
                }

                if (eventDetails.metadata) {
                    const privateProperties = {};

                    if (eventDetails.metadata.customerPhone) {
                        privateProperties.customerPhone = eventDetails.metadata.customerPhone;
                    }

                    if (eventDetails.metadata.customerNotes) {
                        privateProperties.customerNotes = eventDetails.metadata.customerNotes;
                    }

                    if (Object.keys(privateProperties).length > 0) {
                        payload.extendedProperties = {
                            private: privateProperties
                        };
                    }
                }

                if (!Array.isArray(payload.attendees) || payload.attendees.length === 0) {
                    delete payload.attendees;
                }

                const requestInit = {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                };

                if (BOOKING_ENDPOINT) {
                    const response = await fetch(BOOKING_ENDPOINT, {
                        ...requestInit,
                        body: JSON.stringify({
                            calendarId: CALENDAR_ID,
                            event: payload
                        })
                    });
                    if (!response.ok) {
                        const errorText = await response.text().catch(() => '');
                        throw new Error(errorText || `Booking endpoint responded with status ${response.status}`);
                    }
                    return response.json().catch(() => null);
                }

                const endpoint = new URL(`https://www.googleapis.com/calendar/v3/calendars/${encodeURIComponent(CALENDAR_ID)}/events`);

                if (CALENDAR_TOKEN) {
                    requestInit.headers.Authorization = `Bearer ${CALENDAR_TOKEN}`;
                } else if (API_KEY) {
                    endpoint.searchParams.set('key', API_KEY);
                }

                const response = await fetch(endpoint.toString(), requestInit);

                if (!response.ok) {
                    let errorMessage = `Calendar request failed with status ${response.status}`;
                    try {
                        const errorBody = await response.json();
                        if (errorBody && errorBody.error && errorBody.error.message) {
                            errorMessage = errorBody.error.message;
                        }
                    } catch (parseError) {
                        const fallbackText = await response.text().catch(() => '');
                        if (fallbackText) {
                            errorMessage = fallbackText;
                        }
                    }

                    throw new Error(errorMessage);
                }

                return response.json().catch(() => null);
            }

            if (bookingModalClose) {
                bookingModalClose.addEventListener('click', closeBookingModal);
            }
            bookingModal.addEventListener('click', event => {
                if (event.target === bookingModal) {
                    closeBookingModal();
                }
            });

            document.addEventListener('keydown', event => {
                if (event.key === 'Escape' && bookingModal.classList.contains('open')) {
                    closeBookingModal();
                }
            });

            bookingForm.addEventListener('submit', async event => {
                event.preventDefault();

                if (bookingSubmissionInFlight) {
                    return;
                }

                if (!selectedSlotInput.value) {
                    bookingConfirmation.textContent = 'Please choose an appointment slot to continue.';
                    bookingConfirmation.classList.add('visible');
                    return;
                }

                const [slotStart, slotEnd] = selectedSlotInput.value.split('|');

                if (!slotStart || !slotEnd) {
                    bookingConfirmation.textContent = 'We couldnt read the selected appointment slot. Please choose a slot again.';
                    bookingConfirmation.classList.add('visible');
                    return;
                }

                const formData = new FormData(bookingForm);
                const customerName = (formData.get('customerName') || '').toString().trim();
                const customerEmail = (formData.get('customerEmail') || '').toString().trim();
                const customerPhone = (formData.get('customerPhone') || '').toString().trim();
                const customerNotes = (formData.get('customerNotes') || '').toString().trim();

                const summary = customerName ? `Garden consultation with ${customerName}` : 'Garden consultation';
                const description = buildEventDescription({
                    customerName,
                    customerEmail,
                    customerPhone,
                    customerNotes,
                    slotStart,
                    slotEnd
                });

                const eventDetails = {
                    summary,
                    description,
                    start: slotStart,
                    end: slotEnd,
                    attendees: customerEmail ? [{
                        email: customerEmail,
                        displayName: customerName || undefined
                    }] : [],
                    metadata: {
                        customerName,
                        customerEmail,
                        customerPhone,
                        customerNotes
                    }
                };

                bookingSubmissionInFlight = true;
                setBookingSubmitting(true);
                bookingConfirmation.textContent = 'Saving your booking';
                bookingConfirmation.classList.add('visible');
                let submissionSucceeded = false;

                try {
                    await createCalendarEvent(eventDetails);
                    bookingConfirmation.textContent = 'All set! Weve added the visit to your calendar and emailed the details.';
                    await loadCalendarAvailability();
                    submissionSucceeded = true;

                    setTimeout(() => {
                        closeBookingModal();
                    }, 2200);
                } catch (error) {
                    console.error('Failed to create calendar event:', error);
                    bookingConfirmation.textContent = 'We couldnt save your booking automatically. Please call or email us and well confirm it manually.';
                    bookingConfirmation.classList.add('visible');
                } finally {
                    bookingSubmissionInFlight = false;
                    if (!submissionSucceeded) {
                        setBookingSubmitting(false);
                    }
                }
            });

            async function loadCalendarAvailability() {
                bookingGrid.setAttribute('aria-busy', 'true');
                bookingStatus.textContent = 'Checking the latest availability';

                const now = new Date();
                const searchEnd = new Date(now);
                searchEnd.setDate(searchEnd.getDate() + LOOKAHEAD_DAYS);

                try {
                    const events = await fetchCalendarEvents(now.toISOString(), searchEnd.toISOString());
                    const parsedEvents = events
                        .filter(event => event && event.status !== 'cancelled')
                        .map(event => ({
                            start: parseEventDate(event.start),
                            end: parseEventDate(event.end)
                        }))
                        .filter(event => event.start && event.end);

                    const availability = buildDayAvailability(parsedEvents);
                    renderBookingDays(availability);

                    const daysWithOpenSlots = availability.filter(day => day.availableSlots.length > 0);
                    const limitedDays = daysWithOpenSlots.filter(day => day.availableSlots.length <= 2);

                    if (daysWithOpenSlots.length === 0) {
                        bookingStatus.textContent = 'All evening consultations are currently booked. Tap a slot to join the waitlist or contact us for alternatives.';
                    } else if (limitedDays.length > 0) {
                        bookingStatus.textContent = 'Slots are almost gonereserve your free quote visit now.';
                    } else {
                        bookingStatus.textContent = 'Evening appointments update instantlyselect a time that suits you.';
                    }
                } catch (error) {
                    console.error('Unable to load Google Calendar availability:', error);
                    const fallbackAvailability = buildDayAvailability([]);
                    renderBookingDays(fallbackAvailability, { fallback: true });
                    bookingStatus.textContent = 'We couldnt reach Google Calendar just now. Choose a slot below or call us and well confirm for you.';
                } finally {
                    bookingGrid.setAttribute('aria-busy', 'false');
                }
            }

            loadCalendarAvailability();
        }
    </script>
</body>
</html>
